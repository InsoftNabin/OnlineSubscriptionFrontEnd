@model InvoiceData

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .invoice-container {
            border:1px solid black;
            width: 80%;
            margin: 30px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            position: relative;
        }

            /* Watermark applied to invoice container */
            .invoice-container::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://incloud.academeplus.com/fileuploads/Subscription/703445501703445501-1543-LogoInsoft.png') no-repeat center center;
                background-size: contain;
                opacity: 0.1;
                pointer-events: none;
                z-index: -1; /* Ensure watermark is behind content */
            }

        .invoice-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .invoice-header img {
                max-width: 120px;
                height: auto;
            }

            .invoice-header h1 {
                font-size: 32px;
                color: #333;
                margin-top: 20px;
            }

            .invoice-header p {
                font-size: 16px;
                color: #666;
                margin: 5px 0;
            }

        .invoice-details {
            margin-bottom: 30px;
        }

            .invoice-details .flex {
                display: flex;
                justify-content: space-between;
                margin-bottom: 15px;
            }

            .invoice-details p {
                font-size: 16px;
                color: #555;
                margin: 5px 0;
            }

        .invoice-items,
        .transaction-info {
            margin-top: 20px;
        }

            .invoice-items div,
            .transaction-info div {
                padding: 12px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-radius: 8px;
                margin-bottom: 10px;
                background-color: #f7f7f7;
                border: 1px solid #ddd;
            }

                .invoice-items div:first-child {
                    border-top: 2px solid #333;
                }

            .invoice-items .total {
                font-weight: bold;
                background-color: #333;
                color: white;
                border-top: 3px solid #222;
            }

            .transaction-info div:first-child {
                background-color: #e0e0e0;
                font-weight: bold;
            }

        .invoice-footer {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-top: 30px;
        }

            .invoice-footer p {
                font-size: 0.8em;
                color: #888;
            }

        .footer-link {
            color: #007bff;
            text-decoration: none;
        }

        /* Print Button */
        .print-btn {
            display: block;
            width: 150px;
            margin: 30px auto;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
        }

            .print-btn:hover {
                background-color: #555;
            }

        /* Print-specific Styles */
        @@media print {
            .print-btn, go-back-btn {
            display: none; /* Hide print button when printing */
        }

        .invoice-container::after {
            opacity: 0.1; /* Ensure watermark is visible during printing */
        }

        }

        /* Responsive Design */
        @@media only screen and (max-width: 768px) {
            .invoice-container

        {
            width: 100%;
            padding: 20px;
        }

        .invoice-header h1 {
            font-size: 28px;
        }

        .invoice-items div,
        .transaction-info div {
            flex-direction: column;
            text-align: left;
        }

        .invoice-footer p {
            font-size: 0.9em;
        }

        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <!-- Invoice Header -->
        <div class="invoice-header">
            <img src="https://incloud.academeplus.com/fileuploads/Subscription/703445501703445501-1543-LogoInsoft.png" alt="Logo">
            <h1>Invoice</h1>
            <p>
                <strong>Insoft Research And Development</strong><br>
                Pokhara-8, Ratnachowk, Mid Western, 44204, Nepal<br>
                PAN/VAT: hhahaha
            </p>
        </div>

        <!-- Invoice Details -->
        <div class="invoice-details">
            <div class="flex">
                <div>
                    <p><strong>Invoice #@Model.TransactionId</strong></p>
                    <p><strong>Invoice Date:</strong> @Model.InvoiceDate</p>
                    <p><strong>Due Date:</strong> @Model.DueDate</p>
                </div>
                <div>
                    <p><strong>Invoiced To:</strong><br>@Model.CustomerName</p>
                </div>
            </div>
        </div>

        <!-- Invoice Items -->
        <div class="invoice-items">
            <div>
                <div style="flex: 1; padding-left: 20px;">
                    @Model.Product - @Model.PlanName (@Model.InvoiceDate - @Model.DueDate)
                </div>
                <div style="flex: 1; text-align: right; padding-right: 20px;">
                    Rs. @Model.Subtotal NPR
                </div>
            </div>
            <div>
                <div style="flex: 1; padding-left: 20px;">13.00% Value Added Tax (VAT)</div>
                <div style="flex: 1; text-align: right; padding-right: 20px;">
                    Rs. @Model.Vat NPR
                </div>
            </div>
            <div class="total">
                <div style="flex: 1; padding-left: 20px; color:black;">Total</div>
                <div style="flex: 1; text-align: right; padding-right: 20px; color:black;">
                    Rs. @Model.TotalAmount NPR
                </div>
            </div>
        </div>

        <!-- Transaction Information -->
        <div class="transaction-info">
            <h3>Transaction Details</h3>
            <div>
                <div style="flex: 1; padding-left: 20px;"><strong>Transaction Date</strong></div>
                <div style="flex: 1; text-align: center;"><strong>Payment Gateway</strong></div>
                <div style="flex: 1; text-align: center;"><strong>Fonepay Trace ID</strong></div>
                <div style="flex: 1; text-align: right; padding-right: 20px;"><strong>Amount</strong></div>
            </div>
            <div>
                <div style="flex: 1; padding-left: 20px;">@Model.InvoiceDate</div>
                <div style="flex: 1; text-align: center;">@Model.PaymentGateway</div>
                <div style="flex: 1; text-align: center;">@Model.TransactionId</div>
                <div style="flex: 1; text-align: right; padding-right: 20px;">Rs. @Model.TotalAmount NPR</div>
            </div>
            <div>
                <div style="flex: 3; padding-left: 20px; font-weight: bold;">Balance</div>
                <div style="flex: 1; text-align: right; padding-right: 20px; font-weight: bold;">Rs. 0.00</div>
            </div>
        </div>

        <!-- Footer -->
        <div class="invoice-footer">
            <p>IMPORTANT: This document DOES NOT SERVE AS A TAX INVOICE. To fulfill tax requirements, kindly collect the TAX invoice from our accounts department. For inquiries, please contact us at <a href="tel:061-543815" class="footer-link">+977-1-5268549</a></p>
            <p style="font-size: 0.8em; color: #888;">PDF Generated on @Model.InvoiceDate</p>
        </div>

       
        <!-- Print Button -->
        <button class="print-btn btn btn-danger" onclick="window.print()" >
            <i class="fas fa-print" style="margin-right: 10px;"></i> Print Invoice
        </button>

        <!-- Go Back Button -->
        <a href="/Home/Index" class="btn btn-success go-back-btn">
            <i class="fas fa-arrow-left" style="margin-right: 10px;"></i> Go Back
        </a>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
